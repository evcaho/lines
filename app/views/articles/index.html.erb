
<div class="row">
        
  <h1>Listing articles</h1>
   <div class="col-md-8">
  <table>
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>
   
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
      </tr>
    <% end %>
  </table>
  </div>
  <div class="col-md-4">
    <table>
      <% @articles.each do |article| %>
      <tr>
        <td><%= link_to 'Show', article_path(article) %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article_path(article),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class-"col-md-4">
    <a class="btn btn-default" href="<%=new_article_path %>" role="button">New Article</a>
  </div>
</div>


